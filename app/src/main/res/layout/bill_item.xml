<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bill_image"
        android:layout_marginLeft="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@mipmap/pic1" />

    <TextView
        android:id="@+id/bill_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/bill_image"
        android:layout_toRightOf="@id/bill_image"
        android:text="奖金"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/bill_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/bill_kind"
        android:layout_alignBottom="@id/bill_image"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/bill_image"
        android:text="奖学金"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/bill_money"
        android:text="¥1000.0"
        android:textSize="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@id/bill_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bill_outin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/bill_money"
        android:layout_alignTop="@id/bill_image"
        android:layout_marginRight="5dp"
        android:text="收入"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/bill_date"
        android:text="2017/5/14"
        android:textSize="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/bill_image"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>