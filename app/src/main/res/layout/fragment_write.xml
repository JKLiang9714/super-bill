<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/mWriteRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/tab_bg"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/mWriteOutRb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/tab_bg"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/write_out"
                    android:textColor="@drawable/selector_tab_text_color"
                    android:textSize="20dp"/>

                <RadioButton
                    android:id="@+id/mWriteInRb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/tab_bg"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:text="@string/write_in"
                    android:textColor="@drawable/selector_tab_text_color"
                    android:textSize="20dp"/>
            </RadioGroup>

            <!--金额和分类-->
            <LinearLayout
                android:id="@+id/moneyKinds"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/mWriteRadioGroup"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txt_monty"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="¥0.0"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分类："
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txv_kind"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
            <!--支出的分类-->
            <LinearLayout
                android:id="@+id/out_kinds"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/moneyKinds"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/imgv1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/pic1" />

                    <ImageView
                        android:id="@+id/imgv2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/pic2" />

                    <ImageView
                        android:id="@+id/imgv3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/pic3" />

                    <ImageView
                        android:id="@+id/imgv4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/pic4" />

                    <ImageView
                        android:id="@+id/imgv5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/pic5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/pic1"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/pic2"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
